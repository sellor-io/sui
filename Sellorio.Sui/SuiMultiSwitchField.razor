@typeparam T

<SuiFormInputWrapper Label="@Label" LabelSpacing="2">
	<SuiMultiSwitchInput T="T" LabelFunc="LabelFunc" DisabledFunc="DisabledFunc" Options="Options" SelectedOption="SelectedOption" SelectedOptionChanged="SelectedOptionChanged" Disabled="Disabled" />
</SuiFormInputWrapper>

@code {
	[Parameter]
	public string? Label { get; set; }

	[Parameter]
	public Func<T, string>? LabelFunc { get; set; }

	[Parameter]
	public Func<T, bool>? DisabledFunc { get; set; }

	[Parameter, EditorRequired]
	public required IList<T> Options { get; set; }

	[Parameter]
	public required T? SelectedOption { get; set; }

	[Parameter]
	public EventCallback<T> SelectedOptionChanged { get; set; }

	[Parameter]
	public bool Disabled { get; set; }
}
