@typeparam TEnum

<SuiFormInputWrapper Label="@Label">
	<SuiEnumSwitchInput TEnum="TEnum" DisabledFunc="DisabledFunc" Include="Include" Exclude="Exclude" SelectedOption="SelectedOption" SelectedOptionChanged="SelectedOptionChanged" Disabled="Disabled" />
</SuiFormInputWrapper>

@code {
	[Parameter]
	public string? Label { get; set; }

	[Parameter]
	public Func<TEnum, bool>? DisabledFunc { get; set; }

	[Parameter]
	public IList<TEnum>? Include { get; set; }

	[Parameter]
	public IList<TEnum>? Exclude { get; set; }

	[Parameter]
	public required TEnum? SelectedOption { get; set; }

	[Parameter]
	public EventCallback<TEnum> SelectedOptionChanged { get; set; }

	[Parameter]
	public bool Disabled { get; set; }
}
