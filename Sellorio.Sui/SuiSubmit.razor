@{
	bool isSubmitting = Form != null && Form.IsSubmitting;
}

<SuiButton Primary Label="@Label" Loading="isSubmitting" OnClick="HandleClick" Disabled="Form?.Disabled == true" />

@code {
	[CascadingParameter]
	public required SuiForm Form { get; set; }

	[Parameter]
	public string? Label { get; set; }

	async Task HandleClick()
	{
		if (Form != null)
		{
			await Form.OnSubmitAsync();
		}
	}
}
